@model IEnumerable<OpenTicket.Domain.Command.QueryEmailAccounts.EmailAccount>
@{
    ViewBag.Title = "Email Account";
}

<h2>Registered Email Accounts</h2>
<a href="@Url.Action("Create")">
    <svg class="bi" width="24" height="24" fill="currentColor">
        <use xlink:href="~/assets/img/bootstrap-icons.svg#file-plus"/>
    </svg> Create new email account
</a>
<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Server Address</th>
            <th scope="col">Protocol</th>
            <th scope="col">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emailAccount in Model)
        {
            <tr>
                <td>@emailAccount.Id</td>
                <td>@emailAccount.Email</td>
                <td>@emailAccount.ServerAddress:@emailAccount.ServerPort</td>
                <td>@emailAccount.Protocol.Humanize()</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = emailAccount.Id})" title="edit">
                        <svg class="bi" width="24" height="24" fill="currentColor">
                            <use xlink:href="~/assets/img/bootstrap-icons.svg#pencil-square"/>
                        </svg>
                    </a>
                    <a href="@Url.Action("Delete", new { id = emailAccount.Id})" title="remove">
                        <svg class="bi" width="24" height="24" fill="currentColor">
                            <use xlink:href="~/assets/img/bootstrap-icons.svg#trash"/>
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
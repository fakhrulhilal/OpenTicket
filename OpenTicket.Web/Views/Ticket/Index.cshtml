@model IEnumerable<OpenTicket.Domain.Command.QueryTickets.Ticket>

@{
    ViewBag.ActiveMenu = "Ticket";                                                                             
    ViewBag.Title = "Tickets";
}

<h2>Tickets</h2>

<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Customer</th>
        <th scope="col">Title</th>
        <th scope="col">Time</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ticket in Model)
    {
        <tr>
            <td><a href="mailto:@ticket.CustomerEmail" title="Send email to customer">@ticket.CustomerName</a></td>
            <td>@ticket.Title</td>
            <td>@ticket.CreatedDateTime.ToString("f")</td>
        </tr>
    }
    </tbody>
</table>